# Flask config
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# MongoDB Atlas connection
MONGO_USER=User1
MONGO_PASSWORD=user1
MONGO_CLUSTER=cluster0.bhfuz.mongodb.net
MONGO_DATABASE=archival_system
# Full connection string (alternative to individual parts)
# MONGO_URI=mongodb+srv://User1:user1@cluster0.bhfuz.mongodb.net/archival_system?retryWrites=true&w=majority&appName=Cluster0

# MongoDB connection pool settings
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=5
MONGO_CONNECT_TIMEOUT_MS=10000
MONGO_SERVER_SELECTION_TIMEOUT_MS=10000
MONGO_SOCKET_TIMEOUT_MS=20000

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com
